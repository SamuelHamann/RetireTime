@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="beginner-guide-layout">
    <header class="bg-primary text-white p-4 mb-4">
        <h1>Beginner's Guide</h1>
        <p>Your journey to mastering Blazor starts here!</p>
    </header>

    <nav class="container mb-4" aria-label="Progress">
        <ol class="breadcrumb bg-light p-3 rounded">
            <li class="breadcrumb-item @GetActiveClass("/beginner-guide/introduction")">
                <a href="/beginner-guide/introduction">Introduction</a>
            </li>
            <li class="breadcrumb-item @GetActiveClass("/beginner-guide/assets")">
                <a href="/beginner-guide/assets">Assets</a>
            </li>
        </ol>
    </nav>

    <main class="container">
        @Body
    </main>

    <footer class="bg-light text-center p-3 mt-4">
        <small>&copy; 2024 Blazor Beginner's Guide. All rights reserved.</small>
    </footer>
</div>

@code {
    private string GetActiveClass(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath.ToLower();
        return currentPath.Equals(path.ToLower(), StringComparison.OrdinalIgnoreCase) 
            ? "active" 
            : string.Empty;
    }
}